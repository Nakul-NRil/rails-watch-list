<h1>Here's your list "<strong><%= @list.name %></strong>"</h1>
<ul>
<% @list.bookmarks.each do |bookmark| %>
    <li>
      <%= bookmark.movie.title %> <%= link_to "Remove", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this bookmark?" } %>
      <br>
      <%= image_tag bookmark.movie.poster_url, alt: "Movie poster", width: 200 %> <br>
      <%= bookmark.movie.overview %> <br>
        ⭐️ <%= bookmark.movie.rating %> <br>
      Your comment: <%= bookmark.comment %>
    </li>
    <br>
  <% end %>
</ul>
<p><%= link_to "Back to all list", lists_path %></p>
<p><%= link_to "Add new bookmark", new_list_bookmark_path(@list) %></p>
